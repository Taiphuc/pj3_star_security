@model IEnumerable<eProject3.Model.DAL.NewsCategory>
@if ((int)ViewBag.Count > 0)
{
    <li><a href="/New/GetAllNews">Tất cả tin tức</a></li>
    foreach (var item in Model)
    {
        var url = "/New/NewsCategoryDetail/" + item.MetaTitle + "/" + item.Id;
        <li><a href="@url">@item.Name</a> <span class="count">(@item.News.Count)</span></li>
    }
}