@model eProject3.Model.DAL.Client

@{
    ViewBag.Title = "Cập nhật khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)

        <div class="row">
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.Address, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.Address, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.Phone, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.Phone, new { htmlAttributes = new { @class = "form-control", @readonly = "true" } })
                    @Html.ValidationMessageFor(model => model.Phone, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="row">
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.UrlImage, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-11">
                    @Html.EditorFor(model => model.UrlImage, new { htmlAttributes = new { @class = "form-control col-md-9 float-left", @id = "txtImage" } })
                    <button id="btnSelectImage" class="btn-primary btn-sm ml-2 float-left">Chọn ảnh</button>
                    @Html.ValidationMessageFor(model => model.UrlImage, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.IsDeleted, htmlAttributes: new { @class = "control-label col-md-6" })
                <div class="col-md-11">
                    @Html.DropDownListFor(m => m.IsDeleted, new SelectList(new[]
                        {
                            new SelectListItem { Value = null, Text = "Trạng thái" },
                            new SelectListItem { Value = "false", Text = "Hoạt động" },
                            new SelectListItem { Value = "true", Text = "Khóa" },
                        }, "Value", "Text"), new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Address, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        @Html.HiddenFor(model => model.CreatedBy)
        @Html.HiddenFor(model => model.CreatedOn)
        @Html.HiddenFor(model => model.IsDeleted)
        <div class="form-group text-right">
            <div class="col-md-offset-2 col-md-12">
                <button type="submit" class="btn-sm btn-group-sm btn-primary">Cập nhật</button>
            </div>
        </div>
    </div>
}

<div>
    <a href="/Admin/Clients" class="btn btn-secondary"><i class="fas fa-angle-left"></i> Trở về</a>
</div>
